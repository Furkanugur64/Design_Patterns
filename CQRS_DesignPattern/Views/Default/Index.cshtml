@model List<CQRS_DesignPattern.CQRSPattern.Results.GetProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Stok</th>
            <th>Fiyat</th> 
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.Brand</td>
                <td>@item.Category</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td> <a href="/Default/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                <td> <a href="/Default/UpdateProduct/@item.ProductID" class="btn btn-warning">Güncelle</a></td>
                <td> <a href="/Default/GetProduct/@item.ProductID" class="btn btn-info">Detay</a></td>
            </tr>
        }
    </table>
    <a href="/Default/AddProduct/" class="btn btn-success">Yeni Ürün</a>
</div>
